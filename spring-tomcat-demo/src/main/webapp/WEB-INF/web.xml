<!DOCTYPE web-app PUBLIC
 "-//Sun Microsystems, Inc.//DTD Web Application 2.3//EN"
 "http://java.sun.com/dtd/web-app_2_3.dtd" >

<web-app>
  <display-name>Archetype Created Web Application</display-name>
  <servlet>
    <servlet-name>pepsiServelet</servlet-name>
    <servlet-class>com.pepsi.servlet.PepsiServelet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>pepsiServelet</servlet-name>
    <url-pattern>/pepsi</url-pattern>
  </servlet-mapping>

  <filter>
    <filter-name>encording</filter-name>
    <filter-class>java.util.Base64$Encoder</filter-class>
  </filter>
  <filter-mapping>
    <filter-name>encording</filter-name>
    <url-pattern>/*.do</url-pattern>
  </filter-mapping>

</web-app>
